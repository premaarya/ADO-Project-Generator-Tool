{
  "name": "ADO Project Generator",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  // Resource requirements
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "32gb"
  },

  // Features/tools to install
  "features": {
    "ghcr.io/devcontainers/features/powershell:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest",
      "installBicep": false
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  // Environment variables
  "containerEnv": {
    "ADO_ORGANIZATION": "",
    "POWERSHELL_TELEMETRY_OPTOUT": "1"
  },

  // Port forwarding for webhook testing
  "forwardPorts": [8080, 443],
  "portsAttributes": {
    "8080": {
      "label": "Webhook Test",
      "onAutoForward": "notify"
    }
  },

  // Note: For GitHub Codespaces, configure secrets (ADO_PAT) in repository settings
  // under Settings > Secrets and variables > Codespaces

  // VS Code customizations
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.powershell",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "ms-azure-devops.azure-pipelines",
        "streetsidesoftware.code-spell-checker",
        "usernamehw.errorlens",
        "gruntfuggly.todo-tree"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "pwsh",
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true,
        "[powershell]": {
          "editor.defaultFormatter": "ms-vscode.powershell"
        }
      }
    }
  },

  // Mount Azure credentials from host (optional)
  // For Windows hosts: Update HOME to USERPROFILE in the mount path below
  // For Linux/Mac hosts: Keep as-is with HOME
  // "mounts": [
  //   "source=${localEnv:HOME}/.azure,target=/home/vscode/.azure,type=bind,consistency=cached"
  // ],

  // Lifecycle commands
  "onCreateCommand": "bash -c 'if [ ! -f utils/config.json ]; then cp utils/config.json.example utils/config.json; echo \"Created config.json from example\"; else echo \"config.json already exists\"; fi'",
  "postCreateCommand": "pwsh -Command 'Write-Host \"ADO Project Generator ready! Configure utils/config.json and run ./Run-All.ps1 to start.\" -ForegroundColor Green'",
  "postStartCommand": "pwsh -Command 'if (Test-Path ./Validate-Configuration.ps1) { ./Validate-Configuration.ps1 -SkipConnection }'",
  "waitFor": "postCreateCommand",

  "remoteUser": "vscode"
}
